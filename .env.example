# Configurações do Supabase (para a biblioteca 'supabase')
SUPABASE_URL="https://your-project.supabase.co"
SUPABASE_KEY="your-supabase-anon-key"
SUPABASE_SERVICE_KEY="your-supabase-service-role-key"

# Configurações do Banco de Dados (para psycopg2)
DATABASE_URL="postgresql://user:password@host:port/database"

# Chave secreta para assinar os tokens JWT (gere uma chave segura)
JWT_SECRET="your-strong-jwt-secret-key"

# Configurações de Email (use uma senha de aplicativo do Gmail)
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-password

# URL do seu frontend (para gerar links de verificação/recuperação)
FRONTEND_URL=https://your-domain.com.br

# Configurações do Flask para ambiente de desenvolvimento
FLASK_ENV=development
FLASK_DEBUG=True
FLASK_APP=src.main

# --- CONFIGURAÇÕES DO MERCADO PAGO ---
MERCADO_PAGO_ACCESS_TOKEN="TEST-your-mercado-pago-access-token"
MERCADO_PAGO_WEBHOOK_URL="https://your-domain.com"